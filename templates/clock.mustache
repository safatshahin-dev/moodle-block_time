{{!
    @template block_time/clock
    Example context (json):
    {
        "previewdata": [
          {
                "enabledate": true
          }
        ]
    }
}}
<div class="block-time-container container p-3">
    <div class="block-time-clock">
        <div class="block-time-hand block-time-hour" id="data-hour-hand"></div>
        <div class="block-time-hand block-time-minute" id="data-minute-hand"></div>
        <div class="block-time-hand block-time-second" id="data-second-hand"></div>
        <div class="block-time-number-container block-time-number1-container">
            <div class="block-time-number block-time-number1">{{#str}} number1, block_time {{/str}}</div>
        </div>
        <div class="block-time-number-container block-time-number2-container">
            <div class="block-time-number block-time-number2">{{#str}} number2, block_time {{/str}}</div>
        </div>
        <div class="block-time-number-container block-time-number3-container">
            <div class="block-time-number block-time-number3">{{#str}} number3, block_time {{/str}}</div>
        </div>
        <div class="block-time-number-container block-time-number4-container">
            <div class="block-time-number block-time-number4">{{#str}} number4, block_time {{/str}}</div>
        </div>
        <div class="block-time-number-container block-time-number5-container">
            <div class="block-time-number block-time-number5">{{#str}} number5, block_time {{/str}}</div>
        </div>
        <div class="block-time-number-container block-time-number6-container">
            <div class="block-time-number block-time-number6">{{#str}} number6, block_time {{/str}}</div>
        </div>
        <div class="block-time-number-container block-time-number7-container">
            <div class="block-time-number block-time-number7">{{#str}} number7, block_time {{/str}}</div>
        </div>
        <div class="block-time-number-container block-time-number8-container">
            <div class="block-time-number block-time-number8">{{#str}} number8, block_time {{/str}}</div>
        </div>
        <div class="block-time-number-container block-time-number9-container">
            <div class="block-time-number block-time-number9">{{#str}} number9, block_time {{/str}}</div>
        </div>
